{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",

	"formatter": {
		"enabled": true
	},
	"css": {
		"parser": {
			"tailwindDirectives": true
		}
	},

	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,

			"nursery": {
				"useSortedClasses": "error"
			}
		}
	},

	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"recommended": true
			}
		}
	},

	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"semicolons": "always",
			"trailingCommas": "all"
		}
	}
}
